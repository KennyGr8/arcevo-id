{
  "name": "arcevo-id-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "auth-kit-core/dist/index.js",
  "description": "Backend monorepo root for ArcevoId",
  "author": "ArcevoDev",
  "license": "MIT",
  "workspaces": [
    "auth-kit-core"
  ],
  "ts-node": {
    "project": "../tsconfig.build.json",
    "esm": true,
    "transpileOnly": true
  },
  "scripts": {
    "dev": "tsx -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p auth-kit-core && cpy auth-kit-core/package.json auth-kit-core/dist --rename=package.json",
    "start": "node auth-kit-core/dist/index.js",
    "test": "vitest run",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write . && pnpm prisma:format",
    "watch": "tsx scripts/watch.ts",
    "prisma:watch": "pnpm prisma:build-schema --watch",

    "env:validate": "tsx auth-kit-core/common/validators/env.config.ts",
    "utils:index": "tsx scripts/generate-utils-index.ts",
    "generate:db-contracts": "pnpm prisma:build-schema && tsx scripts/generate-contracts.ts",
    "generate:prisma-enums": "pnpm prisma:build-schema && tsx scripts/generate-prisma-enums.ts",
    "prisma:enums:auto": "pnpm generate:prisma-enums && git add . && git commit -m \"chore: regenerate prisma enums\" || echo \"No changes to commit\"",
    "patch:configs": "tsx scripts/patch-configs.ts",
    "prisma:build-schema": "tsx scripts/prisma-build-schema.ts",
    "prisma:format": "pnpm prisma:build-schema && prisma format --schema=prisma/schema.prisma",
    "prisma:migrate": "pnpm prisma:build-schema && prisma migrate dev --schema=prisma/schema.prisma",
    "prisma:generate": "pnpm prisma:build-schema && prisma generate --schema=prisma/schema.prisma",
    "prisma:reset": "pnpm prisma:build-schema && prisma migrate reset --force --schema=prisma/schema.prisma",
    "prisma:seed": "pnpm prisma:build-schema && prisma db seed",
    "prismadb:setup": "tsx scripts/setup-prisma.ts",
    "core:build": "pnpm build --workspace=auth-kit-core",
    "core:watch": "tsc -p tsconfig.build.json --watch",
    "postinstall": "pnpm --filter auth-kit-core build",
    "clean": "tsx scripts/clean-deps.ts",
    "clean:fix": "tsx scripts/clean-deps.ts --fix"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.json": "prettier --write"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "bullmq": "^5.53.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "next": "^15.3.1",
    "node-cron": "^4.0.7",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.4",
    "redis": "^5.1.0",
    "speakeasy": "^2.0.0",
    "twilio": "^5.5.2",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@prisma/internals": "^6.9.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.21",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "chalk": "^5.4.1",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3",
    "zod": "^3.25.64"
  }
}
